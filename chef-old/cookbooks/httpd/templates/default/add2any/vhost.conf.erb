Listen <%= @listenPort %>
<VirtualHost *:<%= @listenPort %>>
	ServerName <%= @domain %>
	ServerAdmin ops@lockerz.com
	DocumentRoot <%= @fsDocRoot %>

	LogLevel warn
	ErrorLog <%= @fsLogRoot %>/error.log
	CustomLog <%= @fsLogRoot %>/access.log lockerz

	<Directory <%= @fsDocRoot %>>
		Options -Indexes -MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>
</VirtualHost>
