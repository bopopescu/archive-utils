; Auto-generated by chef for <%= @node[:fqdn] %>
$TTL    1800
$ORIGIN 10.in-addr.arpa.
@               IN SOA  @       root (
                                        <%= @serial %>  ; serial
                                        3H              ; refresh
                                        15M             ; retry
                                        1W              ; expiry
                                        1M )            ; negative cache TTL RFC2308

<% @nameservers.each do |ns| %>
		NS <%= ns['fqdn'].split(".")[0...-2].join(".") %>.lockerz.int.
<% end %>

<% @hosts.each do |host| %>
<% next if host['ipaddress'] == '' || host['ipaddress'].nil? ||  host['fqdn'] == '' || host['fqdn'].nil?  || host['ipaddress'].split(".")[0] != "10" %>
<%=host['ipaddress'].split(".").reverse[0,3].join(".") %>	PTR <%= host['fqdn'].split(".")[0...-2].join(".") %>.lockerz.int.
<% end %>
