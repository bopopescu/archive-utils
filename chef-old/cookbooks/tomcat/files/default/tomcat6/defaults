export INIT_SCRIPT="/etc/init.d/tomcat6"

export CATALINA_OPTS="-Xms1200m -Xmx1200m -server -XX:+UseParallelGC -XX:HeapDumpPath=/mnt/local/tomcat6/dumps -XX:+HeapDumpOnOutOfMemoryError -Xloggc:${GC_LOG}"
