define service {
	use <%= @cfg[:use] %>

	<% if(@cfg[:hostgroup] != nil) %>
	 hostgroup <%= @cfg[:hostgroup] %>
	<% elsif(@cfg[:host] != nil) %>
	 host <%= @cfg[:host] %>
	<% end %>

	check_command <%= @cfg[:checkCommand] %>

	<% if(@cfg[:descURL] != nil) %>
	 notes_url <%= @cfg[:descURL] %>
	<% end %>

	register <%= (@cfg[:register] == nil ? 0 : @cfg[:register]) %>

	contact_groups			<%= @cfg[:contactGroups] %>
	service_description     <%= @cfg[:description] %>

	check_period			24x7
	notification_period     24x7
	max_check_attempts      3
	process_perf_data		0 
	normal_check_interval   5
	retry_check_interval    1
	notifications_enabled	1

}
