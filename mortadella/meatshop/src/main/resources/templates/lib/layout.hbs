<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{#block "title"}} Meatshop {{/block}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    {{ require_css "/static/css/bootstrap.css" }}
    {{ require_css "/static/css/meatshop.css" }}
    {{ require_css "/static/css/bootstrap-responsive.css" }}
    <style>
      body {
        padding-top: 60px; 
      }
    </style>
    {{> lib/stylesheets }}
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="#">Meatshop.com</a>
          <div class="nav-collapse collapse">
            <ul class="nav">
              <li id="menu-list-meats">
                {{ link_to "Shops" "/shop/shops" }}
              </li>
              <li id="menu-login">
                {{ link_to "Register" "/shop/register" }}
              </li>
              <li id="menu-login">
                {{ link_to "Login" "/shop/login" }}
              </li>
              <li id="menu-login">
                {{ link_to "Logout" "/user/logout" }}
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container">
        {{{content}}}
    </div>
  </body>
  {{ require_javascript "/static/js/angular.js" }}
  {{ require_javascript "/static/js/jquery-1.9.0.js" }}
  {{ require_javascript "/static/js/underscore.js" }}
  {{> lib/javascripts }}
</html>
     
