#!/bin/bash

set -e

source $(dirname $0)/include

function print-usage() {
  if test -n "$1"; then echo $1 1>&2; fi
  echo 1>&2

  echo "Usage: $(basename $0) [options] name java-class-name" 1>&2
  echo "    -h    Print help message" 1>&2
  echo "    -D    Set java system property" 1>&2
  echo "    -p    Set the jetty port" 1>&2
  echo "    -T    Do not tee std{out,err}" 1>&2
  echo "    -d    Debug" 1>&2
  echo 1>&2

  log "Exiting"
  exit 1;
}

tee=true

while getopts "hdp:D:T" option; do
  case $option in
    h ) print-usage;;
    D ) export JAVA_OPTS="$JAVA_OPTS -D$OPTARG";;
    d ) export JAVA_OPTS="$JAVA_OPTS -agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=5000";;
    p ) export LOCKERZ_JETTY_PORT=$OPTARG;;
    T ) tee=false;;
    * ) print-usage "Unknown option: $option";;
  esac
done

shift $(($OPTIND - 1))

if test $# -lt 2; then
  print-usage "At least two arguments (name and Java class) are required"
fi

name=$1
class=$2
shift 2

pidFile=$LOCKERZ_HOME/pids/$name.pid

if test -n "$pidFile"; then
  if test -e $pidFile; then
    if kill -0 $(cat $pidFile) 2>/dev/null; then
      fatal "Process is running: $pidFile"
    fi
  fi
fi

if test -e $LOCKERZ_HOME/.lockerz; then
  source $LOCKERZ_HOME/.lockerz
fi

if test -e $LOCKERZ_HOME/.$name; then
  source $LOCKERZ_HOME/.$name
fi

LOCKERZ_JAVA_OPTS="$JAVA_OPTS -Dlockerz.home=$LOCKERZ_HOME
-Dcom.sun.management.jmxremote.port=${LOCKERZ_JMX_PORT:-9999} 
-Dcom.sun.management.jmxremote.authenticate=${LOCKERZ_JMX_AUTH:-false} 
-Dcom.sun.management.jmxremote.ssl=${LOCKERZ_JMX_SSL:-false}
-Dapp.name=$name"

if test -n "$LOCKERZ_JETTY_PORT"; then
  LOCKERZ_JAVA_OPTS="$LOCKERZ_JAVA_OPTS -Djetty.port=$LOCKERZ_JETTY_PORT"
fi

if test "$tee" = "true"; then
  ( java \
  $LOCKERZ_JAVA_OPTS \
  -classpath $BASEDIR/common-lib/\*:$BASEDIR/artifact/\* \
  $class "$@" 2>&1 & echo $! >&3 ) 3>$pidFile | tee -a $LOCKERZ_HOME/log/$name.out &
else
  java \
  $LOCKERZ_JAVA_OPTS \
  -classpath $BASEDIR/common-lib/\*:$BASEDIR/artifact/\* \
  $class "$@" 2>$LOCKERZ_HOME/log/$name.out >> $LOCKERZ_HOME/log/$name.out &
  echo $! >$pidFile
fi
