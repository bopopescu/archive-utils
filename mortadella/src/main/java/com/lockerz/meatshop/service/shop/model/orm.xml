<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm" version="2.0">

  <entity class="com.lockerz.meatshop.service.shop.model.User" access="FIELD">
    <table name="user"/>
    <attributes>
      <id name="_id">
        <column name="id"/>
        <generated-value strategy="IDENTITY"/>
      </id>
      <basic name="_email">
        <column name="email"/>
      </basic>
      <basic name="_password">
        <column name="password"/>
      </basic>
    </attributes>
  </entity>

  <entity class="com.lockerz.meatshop.service.shop.model.Meat" access="FIELD">
    <table name="meat"/>
    <attributes>
      <id name="_id">
        <column name="id"/>
        <generated-value strategy="IDENTITY"/>
      </id>
      <basic name="_name">
        <column name="name"/>
      </basic>
      <basic name="_priceDollars">
        <column name="price_dollars"/>
      </basic>
      <many-to-one name="_shop">
        <join-column name="shop_id"/>
      </many-to-one>
    </attributes>
  </entity>

  <entity class="com.lockerz.meatshop.service.shop.model.Shop" access="FIELD">
    <table name="shop"/>
    <attributes>
      <id name="_id">
        <column name="id"/>
        <generated-value strategy="IDENTITY"/>
      </id>
      <basic name="_name">
        <column name="name"/>
      </basic>
      <one-to-many name="_meats" mapped-by="_shop"/>
    </attributes>
  </entity>

</entity-mappings>
