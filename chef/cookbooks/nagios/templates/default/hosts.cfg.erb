<% @hosts.each do |host| %>
<% next if(host[:ipaddress] == nil) %>
define host {
	use		generic-host
	address		<%= host['ipaddress'] %>
	host_name 	<%= (host['fqdn'] == nil ? "Unknown hostname" : host['fqdn']) %>
	hostgroups	prod-servers
}

<% end -%>

