<% @roles.each do |role| %>
define contactgroup {
	alias				<%= role.name %>
	members				<%= (role.override_attributes["owners"] == nil ? "ops@lockerz.com" : role.override_attributes["owners"].join( "," )) %>
	contactgroup_name	<%= role.name %>-owners
}
<% end %>

